<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MultiThreadedLists"
             x:Class="MultiThreadedLists.MainPage"
             Title="Look, Ma! No blocks!">

    <ListView x:Name="listview" CachingStrategy="RecycleElement" HasUnevenRows="true">
        <ListView.ItemTemplate>
            <DataTemplate>
                <local:SpecialViewCell />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
